<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.base</groupId>
    <artifactId>base-parent</artifactId>
    <version>1.0-SNAPSHOT</version>

    <!-- parent must declare packaging pom -->
    <packaging>pom</packaging>

    <modules>
        <module>../base-api</module>
        <module>../base-server</module>
        <module>../base-common</module>
        <module>../base-simple</module>
        <module>../base-web</module>
    </modules>

    <properties>
        <spring.version>4.3.2.RELEASE</spring.version><!--3.2.6-->
        <java.source.version>1.7</java.source.version>
        <java.target.version>1.7</java.target.version>
        <postgresql.version>9.4.1209.jre7</postgresql.version><!--9.4-1200-jdbc41-->
        <mybatis.version>3.4.1</mybatis.version>
        <mybatis-spring.version>1.3.0</mybatis-spring.version>
        <dubbo.version>2.5.3</dubbo.version>
        <druid.version>1.0.7</druid.version>
        <mgb.version>1.3.5</mgb.version>
        <aspectjweaver.version>1.8.9</aspectjweaver.version>

        <junit.version>4.12</junit.version>
        <slf4j-api.version>1.7.12</slf4j-api.version>
        <jcl-over-slf4j.version>1.7.12</jcl-over-slf4j.version>
        <logback-core.version>1.1.3</logback-core.version>
        <logback-classic.version>1.1.3</logback-classic.version>
        <fastjson.version>1.1.15</fastjson.version>
        <zookeeper.version>3.4.6</zookeeper.version>
        <zkclient.version>0.10</zkclient.version>
        <jetty.version>7.0.0.pre5</jetty.version>
        <velocity.version>1.7</velocity.version>
        <velocity-tools.version>2.0</velocity-tools.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.source.version}</source>
                    <target>${java.target.version}</target>
                </configuration>
            </plugin>
        </plugins>

        <sourceDirectory>src/main/java</sourceDirectory>
        <testSourceDirectory>src/test/java</testSourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
    </build>



